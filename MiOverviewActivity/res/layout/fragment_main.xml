<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#dacfcd"
        android:padding="10dp" >

        <TextView
            android:id="@+id/peiduiid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="正在连接服务器..."
            android:textColor="#ffffff"
            android:textSize="28dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:onClick="onClick" >

        <TextView
            android:id="@+id/action_xintiao"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginRight="10dp"
            android:background="#fc9c9d"
            android:gravity="center"
            android:padding="40dp"
            android:text="心跳"
            android:textColor="#ffffff"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/action_light"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:background="#afd8ee"
            android:gravity="center"
            android:padding="40dp"
            android:text="灯光"
            android:textColor="#ffffff"
            android:textSize="28dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/action_xunxi"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginRight="10dp"
            android:background="#84af9b"
            android:gravity="center"
            android:padding="40dp"
            android:text="讯息"
            android:textColor="#ffffff"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/action_xinqing"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:background="#f9ccad"
            android:gravity="center"
            android:padding="40dp"
            android:text="心情"
            android:textColor="#ffffff"
            android:textSize="28dp" />
    </LinearLayout>

</LinearLayout>